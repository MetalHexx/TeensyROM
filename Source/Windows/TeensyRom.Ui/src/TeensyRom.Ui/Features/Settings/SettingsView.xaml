<UserControl x:Class="TeensyRom.Ui.Features.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:core="clr-namespace:TeensyRom.Core.Files;assembly=TeensyRom.Core"
             xmlns:local="clr-namespace:TeensyRom.Ui.Features.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0" 
            HorizontalAlignment="Left"
            Style="{StaticResource SectionTitle}" 
            Margin="10" 
            Text="Settings"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="130"></RowDefinition>
                <RowDefinition Height="1"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" HorizontalAlignment="Right" Content="Watch Directory:" />

            <TextBox Grid.Row="0" Grid.Column="3"                
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Watch Directory"
                Text="{Binding Settings.WatchDirectoryLocation, Mode=TwoWay}" />

            <Label Grid.Row="1" HorizontalAlignment="Right" Content="Target Storage:" />

            <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="top" Margin="0 3 0 0">

                <RadioButton 
                    Content="SD" 
                    IsChecked="{Binding Settings.TargetType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static core:TeensyStorageType.SD}}" />

                <RadioButton Content="USB" 
                         Margin="10,0,0,0" 
                         IsChecked="{Binding Settings.TargetType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static core:TeensyStorageType.USB}}" />
            </StackPanel>

            <Label Grid.Row="2" HorizontalAlignment="Right" Content="Target Root Path:" />

            <TextBox Grid.Row="2" Grid.Column="3"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Target Root"
                 Text="{Binding Settings.TargetRootPath, Mode=TwoWay}" />

            <Label Grid.Row="3" HorizontalAlignment="Right" Content="File Type Paths:" />

            <ItemsControl Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top" ItemsSource="{Binding Settings.FileTargets}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <!-- File Type -->
                            <Label 
                                Content="{Binding DisplayName}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                ToolTip="The watch directory"/>

                            <!-- Root Path -->
                            <TextBlock Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Foreground="LightBlue"
                                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.Settings.TargetRootPath, StringFormat='{}{0}'}"
                             />

                            <!-- Textbox for Input -->
                            <TextBox Grid.Column="4" 
                                materialDesign:HintAssist.Hint="{Binding DisplayName, StringFormat='{}{0} Target Path'}"
                                Text="{Binding TargetPath, Mode=TwoWay}" 
                                VerticalAlignment="Center" />

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>

        <Button Grid.Row="5" Width="300" Content="Save Settings" Margin="20" Command="{Binding SaveSettingsCommand}" />

        <materialDesign:Snackbar Grid.Row="6" VerticalAlignment="Top" MessageQueue="{Binding SettingsMessageQueue}" />

    </Grid>
</UserControl>
