<UserControl x:Class="TeensyRom.Ui.Features.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:core="clr-namespace:TeensyRom.Core.Files;assembly=TeensyRom.Core"
             xmlns:local="clr-namespace:TeensyRom.Ui.Features.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0" 
            HorizontalAlignment="Left"
            Style="{StaticResource SectionTitle}" 
            Margin="10" 
            Text="Settings"/>

        <!-- Storage Type -->
        <Label Grid.Row="1" Margin="11 0 10 0"  Content="Target Storage:" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="130,0,0,20">
            <RadioButton Content="SD" 
                         IsChecked="{Binding Settings.TargetType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static core:TeensyStorageType.SD}}" />
            <RadioButton Content="USB" 
                         Margin="20,0,0,0" 
                         IsChecked="{Binding Settings.TargetType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static core:TeensyStorageType.USB}}" />
        </StackPanel>

        <!-- Sid Target Path -->
        <Label Grid.Row="2" Margin="11 0 10 0"  Content="Sid Target Path:" />
        <TextBox Grid.Row="2"
                 Margin="130,0,0,20"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Sid Target Path"
                 Text="{Binding Settings.SidTargetPath, Mode=TwoWay}" />

        <!-- Prg Target Path-->
        <Label Grid.Row="3" Margin="11 0 10 0" Content="Prg Target Path:" />
        <TextBox Grid.Row="3"
                 Margin="130,0,0,20"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Prg Target Path"
                 Text="{Binding Settings.PrgTargetPath, Mode=TwoWay}" />

        <!-- Crt Target Path-->
        <Label Grid.Row="4" Margin="11 0 10 0" Content="Crt Target Path:" />
        <TextBox Grid.Row="4"
                 Margin="130,0,0,20"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Crt Target Path"
                 Text="{Binding Settings.CrtTargetPath, Mode=TwoWay}" />

        <!-- Local Watch Directory -->
        <Label Grid.Row="5" Margin="11 0 10 0" Content="Watch Directory:" />
        <TextBox Grid.Row="5"
                 Margin="130,0,0,20"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Watch Directory"
                 Text="{Binding Settings.WatchDirectoryLocation, Mode=TwoWay}" />        

        <Button Grid.Row="6" Content="Save Settings" Margin="20" Command="{Binding SaveSettingsCommand}" />

        <TextBox 
            Grid.Row="7" 
            x:Name="LogTextBox" 
            Margin="13 0 10 0" 
            materialDesign:HintAssist.Hint="Logs" 
            Text="{Binding Logs, Mode=OneWay}" 
            TextWrapping="Wrap" 
            IsReadOnly="True" 
            VerticalScrollBarVisibility="Auto" />

    </Grid>
</UserControl>
