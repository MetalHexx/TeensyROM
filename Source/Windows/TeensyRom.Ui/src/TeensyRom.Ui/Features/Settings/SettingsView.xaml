<UserControl x:Class="TeensyRom.Ui.Features.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:core="clr-namespace:TeensyRom.Core.Storage.Entities;assembly=TeensyRom.Core"
             xmlns:local="clr-namespace:TeensyRom.Ui.Features.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="40" ></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="130"></RowDefinition>
                <RowDefinition Height="1"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <Label 
                Content="Save Music Cache:"
                ToolTip="Saves the music cache to disk for increased performance over time.  Be sure to use the refresh button if storage is altered outside of the app."
                Grid.Row="0" HorizontalAlignment="Right"/>

            <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Top" Margin="0 4 0 0">
                <CheckBox                  
                Content="Enabled"                
                ToolTip="Saves the music cache to disk for increased performance over time.  Be sure to use the refresh button if storage is altered outside of the app."
                IsChecked="{Binding Settings.SaveMusicCacheEnabled, Mode=TwoWay}" 
                Grid.Row="0" Grid.Column="3" VerticalAlignment="Top" Margin="0 0 0 0"/>
            </StackPanel>
            

            <Label 
                Content="File Auto-Transfer:"
                ToolTip="Enabling auto-transfer will watch for files in the specified directory below.  If a file is detected, it will automatically copy the file and place it in the appropriate folders as defined below."
                Grid.Row="1" HorizontalAlignment="Right"/>
            <CheckBox                  
                Content="Enabled"                
                ToolTip="Enabling auto-transfer will watch for files in the specified directory below.  If a file is detected, it will automatically copy the file and place it in the appropriate folders as defined below."
                IsChecked="{Binding Settings.AutoFileCopyEnabled, Mode=TwoWay}" 
                Grid.Row="1" Grid.Column="3" VerticalAlignment="Top" Margin="0 4 0 0"/>

            <Label 
                Content="Watch Directory:" 
                ToolTip="Set up a directory to watch.  When a supported file type is copied to the directory (like your downloads directory) it will automatically save the file to TeensyRom.  See: File Type Paths to configure target locations."
                Grid.Row="2" HorizontalAlignment="Right"/>

            <TextBox 
                ToolTip="Set up a directory to watch.  When a supported file type is copied to the directory (like your downloads directory) it will automatically save the file to TeensyRom.  See: File Type Paths to configure target locations."
                materialDesign:HintAssist.Hint="Watch Directory"
                IsEnabled="{Binding Settings.AutoFileCopyEnabled}"
                Text="{Binding Settings.WatchDirectoryLocation, Mode=TwoWay}"                
                Grid.Row="2" Grid.Column="3" VerticalAlignment="Top"/>

            <Label 
                Content="Target Storage:"
                Grid.Row="3" HorizontalAlignment="Right"/>

            <StackPanel 
                ToolTip="This will determine the default storage type to store files on TeensyRom."                
                Grid.Row="3" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="top" Margin="0 3 0 0">

                <RadioButton 
                    Content="SD" 
                    IsChecked="{Binding Settings.TargetType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static core:TeensyStorageType.SD}}" />

                <RadioButton 
                    Content="USB"                          
                    IsChecked="{Binding Settings.TargetType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static core:TeensyStorageType.USB}}" 
                    Margin="10,0,0,0" />
            </StackPanel>

            <Label 
                Content="Target Root Path:"
                Grid.Row="4" HorizontalAlignment="Right"/>

            <TextBox                
                materialDesign:HintAssist.Hint="Target Root"
                ToolTip="The root path to store files on TeensyRom.  This value will be used as the parent path for the files types below."
                Text="{Binding Settings.TargetRootPath, Mode=TwoWay}" 
                VerticalAlignment="Top" Grid.Row="4" Grid.Column="3"/>

            <Label 
                Content="File Type Paths:" 
                Grid.Row="5" HorizontalAlignment="Right"/>

            <ItemsControl  
                ToolTip="You can set the default path to store the file types.  The root path will be prepended to the path you specify on the file type"
                ItemsSource="{Binding Settings.FileTargets}"
                Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <Label 
                                Content="{Binding DisplayName}"
                                ToolTip="The watch directory"
                                VerticalAlignment="Center" HorizontalAlignment="Right"/>

                            <TextBlock 
                                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.Settings.TargetRootPath, StringFormat=\{0\}/}"
                                Foreground="LightBlue"
                                Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                            <TextBox Grid.Column="4" 
                                materialDesign:HintAssist.Hint="{Binding DisplayName, StringFormat='{}{0} Target Path'}"
                                Text="{Binding TargetPath, Mode=TwoWay}" 
                                VerticalAlignment="Center" />

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>

        <Button             
            ToolTip="This will save your settings to disk.  They will be remembered when you re-open the application."
            Content="Save Settings"  
            Command="{Binding SaveSettingsCommand}" 
            Grid.Row="6" Width="300" Margin="20"/>

    </Grid>
</UserControl>
